{
    "parser": "babel-eslint",
    "extends": [
        "standard",
        "standard-react"
    ],
    "plugins": [
        "babel",
        "react",
        "promise"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "__DEV__": false,
        "__TEST__": false,
        "__PROD__": false,
        "__COVERAGE__": false
    },
    "rules": {
        "key-spacing": "off",
        "jsx-quotes": [2,"prefer-single"],
        "max-len": [2,120,2],
        "object-curly-spacing": [2,"always"],
        "comma-dangle": "off",
        "no-unused-vars": "off",
        "no-multiple-empty-lines":"off",
        "indent": ["error",4,{"SwitchCase": 1}],
        "quotes": ["error","single"],
        "eol-last":"off",
        "no-var":"error",
        "new-cap":"error",
        "no-whitespace-before-property":"error"
    }
}